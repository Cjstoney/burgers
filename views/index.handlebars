<div class="container">

<div class="jumbotron">
  <h1>Eat Some Burgers</h1>
  <p>Create the meat patty sandwiches... Then eat them.</p>
<panel>
    <form class="create-form">
        <div class="form-group">
            <label for "newburger">Order Fresh Burger</label>
            <input type="text" id="newburger" name="burger">
            <button type='submit' class='btn btn-success' id='addburger'>
                <span class="fa fa-thumbs-up">Add Burger</span>
            </button>
        </div>
    </form>
    </panel>
</div>
<div class="row">
    <div class="col-sm-6">
        <div class= "panel panel-default">
            <div class="panel-heading" id="leftside"><strong>Order YOur Burger</strong></div>
            <div class="panel-body">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
                    <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}" 
                    data-newDevoured="{{devoured}}"><span class="fa fa-used">Nom Nom</span></button>
                    <hr>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading" id="rightside"><strong>Devour The Burgers</strong></div>
            <div class="panel-body">
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
                    <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}" 
                    data-newDevoured="{{devoured}}"><span class="fa fa-trash">Delete</span></button>
                    <hr>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

</div>